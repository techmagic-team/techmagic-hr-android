<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llVacation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                style="@style/EmployeeDetailsLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/fragment_employee_details_text_layout_height"
                    android:layout_gravity="top"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_calendar_check_black" />

            </LinearLayout>

            <LinearLayout
                style="@style/EmployeeDetailsLayoutContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginBottom="@dimen/fragment_employee_details_text_view_margin_bottom"
                    android:layout_marginEnd="@dimen/fragment_employee_details_text_view_margin_horizontal"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="@dimen/fragment_employee_details_text_view_margin_horizontal"
                    android:layout_marginStart="0dp"
                    android:gravity="start"
                    android:lineSpacingExtra="4dp"
                    android:text="@string/fragment_employee_details_card_view_text_vacation" />

                <TextView
                    android:id="@+id/tvVacation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginBottom="@dimen/fragment_employee_details_text_view_margin_bottom"
                    android:layout_marginEnd="@dimen/fragment_employee_details_text_view_margin_horizontal"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="@dimen/fragment_employee_details_text_view_margin_horizontal"
                    android:layout_marginStart="0dp"
                    android:gravity="start"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

        </LinearLayout>

        <include layout="@layout/divider_grey" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llDayOff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                style="@style/EmployeeDetailsLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/fragment_employee_details_text_layout_height"
                    android:layout_gravity="top"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_calendar_check_black" />

            </LinearLayout>

            <LinearLayout
                style="@style/EmployeeDetailsLayoutContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginBottom="@dimen/fragment_employee_details_text_view_margin_bottom"
                    android:layout_marginEnd="@dimen/fragment_employee_details_text_view_margin_horizontal"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="@dimen/fragment_employee_details_text_view_margin_horizontal"
                    android:layout_marginStart="0dp"
                    android:gravity="start"
                    android:lineSpacingExtra="4dp"
                    android:text="@string/fragment_employee_details_card_view_text_day_off" />

                <TextView
                    android:id="@+id/tvDayOff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginBottom="@dimen/fragment_employee_details_text_view_margin_bottom"
                    android:layout_marginEnd="@dimen/fragment_employee_details_text_view_margin_horizontal"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="@dimen/fragment_employee_details_text_view_margin_horizontal"
                    android:layout_marginStart="0dp"
                    android:gravity="start"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

        </LinearLayout>

        <include layout="@layout/divider_grey" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llIllness"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                style="@style/EmployeeDetailsLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/fragment_employee_details_text_layout_height"
                    android:layout_gravity="top"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_calendar_check_black" />

            </LinearLayout>

            <LinearLayout
                style="@style/EmployeeDetailsLayoutContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginBottom="@dimen/fragment_employee_details_text_view_margin_bottom"
                    android:layout_marginEnd="@dimen/fragment_employee_details_text_view_margin_horizontal"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="@dimen/fragment_employee_details_text_view_margin_horizontal"
                    android:layout_marginStart="0dp"
                    android:gravity="start"
                    android:lineSpacingExtra="4dp"
                    android:text="@string/fragment_employee_details_card_view_text_illness" />

                <TextView
                    android:id="@+id/tvIllness"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginBottom="@dimen/fragment_employee_details_text_view_margin_bottom"
                    android:layout_marginEnd="@dimen/fragment_employee_details_text_view_margin_horizontal"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="@dimen/fragment_employee_details_text_view_margin_horizontal"
                    android:layout_marginStart="0dp"
                    android:gravity="start"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

        </LinearLayout>

        <include layout="@layout/divider_grey" />

    </LinearLayout>

</LinearLayout>