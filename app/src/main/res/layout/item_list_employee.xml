<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cvItemView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_home_card_view_list_item_margin_vertical"
    android:layout_marginEnd="@dimen/activity_home_card_view_list_item_margin_horizontal"
    android:layout_marginLeft="@dimen/activity_home_card_view_list_item_margin_horizontal"
    android:layout_marginRight="@dimen/activity_home_card_view_list_item_margin_horizontal"
    android:layout_marginStart="@dimen/activity_home_card_view_list_item_margin_horizontal"
    android:layout_marginTop="@dimen/activity_home_card_view_list_item_margin_vertical"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivAvatar"
            android:layout_width="@dimen/activity_home_card_view_list_item_avatar_width"
            android:layout_height="@dimen/activity_home_card_view_list_item_avatar_height"
            android:layout_marginEnd="@dimen/activity_home_card_view_list_item_photo_margin_horizontal"
            android:layout_marginLeft="@dimen/activity_home_card_view_list_item_photo_margin_horizontal"
            android:layout_marginRight="@dimen/activity_home_card_view_list_item_photo_margin_horizontal"
            android:layout_marginStart="@dimen/activity_home_card_view_list_item_photo_margin_horizontal"
            android:adjustViewBounds="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/activity_home_card_view_list_item_margin"
            android:layout_marginEnd="@dimen/activity_home_card_view_list_item_content_margin_horizontal"
            android:layout_marginLeft="@dimen/activity_home_card_view_list_item_content_margin_horizontal"
            android:layout_marginRight="@dimen/activity_home_card_view_list_item_content_margin_horizontal"
            android:layout_marginStart="@dimen/activity_home_card_view_list_item_content_margin_horizontal"
            android:layout_marginTop="@dimen/activity_home_card_view_list_item_margin"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/tvPosition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="@dimen/activity_home_card_view_list_item_text_margin_top"
                android:ellipsize="end"
                android:maxLines="1"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvLead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="@dimen/activity_home_card_view_list_item_text_margin_top"
                android:ellipsize="end"
                android:maxLines="1"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>