<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/fragment_employee_details_margin"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:id="@+id/cvPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/fragment_employee_details_margin">

        <ImageView
            android:id="@+id/ivPhoto"
            android:layout_width="@dimen/fragment_employee_details_photo_size"
            android:layout_height="@dimen/fragment_employee_details_photo_size"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:scaleType="centerCrop" />

    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/ivDownload"
        style="@style/FullImageViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/cvPhoto"
        android:layout_toRightOf="@+id/cvPhoto"
        android:src="@drawable/ic_arrow_downward" />

</RelativeLayout>