<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="co.techmagic.hr.presentation.ui.fragment.DetailsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fragment_employee_details_margin"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:id="@+id/cvPhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/fragment_employee_details_margin">

                <ImageView
                    android:id="@+id/ivPhoto"
                    android:layout_width="@dimen/fragment_employee_details_photo_size"
                    android:layout_height="@dimen/fragment_employee_details_photo_size"
                    android:layout_gravity="center_horizontal"
                    android:foreground="?android:attr/selectableItemBackground" />

            </android.support.v7.widget.CardView>

            <ImageView
                android:id="@+id/ivDownload"
                style="@style/FullImageViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/cvPhoto"
                android:layout_toRightOf="@+id/cvPhoto"
                android:src="@drawable/ic_arrow_downward" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/fragment_employee_details_text_view_margin_vertical"
            android:background="?attr/selectableItemBackground"
            android:padding="@dimen/fragment_employee_details_image_view_padding"
            android:text="@string/fragment_employee_details_card_view_text_tap_to_see_the_full_image" />

        <include layout="@layout/divider_grey" />

        <include layout="@layout/layout_card_view_employee_details" />

    </LinearLayout>

</ScrollView>