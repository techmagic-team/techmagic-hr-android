<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>


    <style name="DialogThemeWhite" parent="android:Theme.Holo.Dialog.NoActionBar">
        <item name="android:backgroundDimEnabled">false</item>
    </style>


    <style name="DialogThemeNoBarDimmed" parent="android:Theme.Holo.Dialog.NoActionBar">
        <item name="android:backgroundDimEnabled">true</item>
    </style>


    <style name="DialogThemeDimmed" parent="android:Theme.Dialog">
        <item name="android:backgroundDimEnabled">true</item>
    </style>


    <style name="NoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/colorWhite</item>
    </style>

    <style name="AppTheme.Primary.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.Primary.ButtonDelete" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorButtonDelete</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:background">@color/colorWhite</item>
    </style>


    <style name="DatePickerDialog" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>


    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:text">YES</item>
    </style>


    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:text">NO</item>
    </style>


    <style name="EmployeeDetailsLayout">
        <item name="android:selectableItemBackground">?android:attr/selectableItemBackground</item>
        <item name="android:layout_marginTop">
            @dimen/fragment_employee_details_text_layout_margin_vertical
        </item>
        <item name="android:layout_marginBottom">
            @dimen/fragment_employee_details_text_layout_margin_vertical
        </item>
        <item name="android:layout_marginLeft">
            @dimen/fragment_employee_details_text_layout_margin_horizontal
        </item>
        <item name="android:layout_marginRight">
            @dimen/fragment_employee_details_text_layout_margin_horizontal
        </item>
    </style>


    <style name="EmployeeDetailsLayoutContent">
        <item name="android:layout_marginTop">
            @dimen/fragment_employee_details_text_layout_margin_vertical
        </item>
        <item name="android:layout_marginBottom">
            @dimen/fragment_employee_details_text_layout_margin_vertical
        </item>
        <item name="android:layout_marginLeft">0dp</item>
    </style>


    <style name="EmployeeDetailsTextView">
        <item name="android:layout_marginLeft">
            @dimen/fragment_employee_details_text_view_margin_horizontal
        </item>
        <item name="android:layout_marginRight">
            @dimen/fragment_employee_details_text_view_margin_horizontal
        </item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:lineSpacingExtra">@dimen/fragment_employee_details_line_spacing_extra
        </item>
    </style>


    <style name="EmployeeDetailsTextViewContent">
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">
            @dimen/fragment_employee_details_text_view_margin_horizontal
        </item>
        <item name="android:lineSpacingExtra">@dimen/fragment_employee_details_line_spacing_extra
        </item>
        <item name="android:gravity">left</item>
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
    </style>


    <style name="FullImageViewStyle">
        <item name="android:paddingLeft">@dimen/fragment_employee_details_image_view_padding</item>
        <item name="android:paddingRight">@dimen/fragment_employee_details_image_view_padding</item>
        <item name="android:layout_marginBottom">
            @dimen/fragment_employee_details_image_view_margin_bottom
        </item>
    </style>


    <style name="ColorsLayout">
        <item name="android:layout_marginLeft">@dimen/activity_layout_colors_layout_margin</item>
        <item name="android:layout_marginTop">@dimen/activity_layout_colors_layout_margin_vertical
        </item>
        <item name="android:layout_marginBottom">
            @dimen/activity_layout_colors_layout_margin_vertical
        </item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>


    <style name="ColorsLayoutCircleView">
        <item name="android:layout_width">@dimen/activity_layout_colors_circle_view_size</item>
        <item name="android:layout_height">@dimen/activity_layout_colors_circle_view_size</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginRight">@dimen/activity_layout_colors_circle_margin_right
        </item>
    </style>


    <style name="ColorsLayoutTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/activity_layout_colors_text_size</item>
    </style>

    <style name="TimeReportClientTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/color_state_time_report_client_text</item>
        <item name="android:textSize">@dimen/fragment_time_tracker_client_text_size</item>
    </style>

    <style name="TimeReportProjectTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/color_state_time_report_project_text</item>
        <item name="android:textSize">@dimen/fragment_time_tracker_project_text_size</item>
    </style>

    <style name="TimeReportTaskTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/color_state_time_report_time_text</item>
        <item name="android:textSize">@dimen/fragment_time_tracker_task_text_size</item>
    </style>

    <style name="TimeReportNoteTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_state_time_report_note_text</item>
        <item name="android:textSize">@dimen/fragment_time_tracker_note_text_size</item>
    </style>

    <style name="TimeReportTimeTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/color_state_time_report_time_text</item>
        <item name="android:textSize">@dimen/fragment_time_tracker_time_text_size</item>
    </style>

    <style name="TimeReportHeaderTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/activity_time_report_detail_header_bottom_offset</item>
        <item name="android:textColor">@color/color_time_report_detail_task_header_color</item>
        <item name="android:textSize">@dimen/activity_time_report_detail_header_text_size</item>
    </style>

    <style name="TimeReportPickerTextStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/color_time_report_detail_picker_text_color</item>
        <item name="android:textSize">@dimen/activity_time_report_detail_picker_text_size</item>
        <item name="android:background">@drawable/bg_time_report_small_input_border</item>
        <item name="android:drawableRight">@drawable/ic_time_report_detail_picker_arrow</item>
        <item name="android:paddingLeft">@dimen/activity_time_report_detail_picker_left_padding</item>
        <item name="android:paddingTop">@dimen/activity_time_report_detail_picker_top_padding</item>
        <item name="android:paddingRight">@dimen/activity_time_report_detail_picker_right_padding</item>
        <item name="android:paddingBottom">@dimen/activity_time_report_detail_picker_bottom_padding</item>
    </style>

    <style name="TimeReportDetailDescriptionInputStyle">
        <item name="android:background">@drawable/bg_time_report_description_border</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">top</item>
        <item name="android:textSize">@dimen/activity_time_report_detail_description_text_size</item>
        <item name="android:textColor">@color/color_time_report_detail_picker_description_text_color</item>
        <item name="android:padding">@dimen/activity_time_report_detail_description_padding</item>
        <item name="android:minHeight">@dimen/activity_time_report_detail_description_min_height</item>
        <item name="android:textColorHint">@color/color_time_report_detail_picker_description_hint_color</item>
    </style>

    <style name="ErrorFieldTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:visibility">invisible</item>
        <item name="android:textSize">@dimen/activity_time_report_detail_description_error_text_size</item>
        <item name="android:textColor">@color/color_time_report_detail_picker_description_error_color</item>
        <item name="android:layout_marginTop">@dimen/activity_time_report_detail_description_error_vertical_offset</item>
        <item name="android:layout_marginBottom">@dimen/activity_time_report_detail_description_error_vertical_offset</item>
    </style>

    <style name="TimeReportDetailDefaultTimeButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/activity_time_report_detail_default_time_text_size</item>
        <item name="android:padding">@dimen/activity_time_report_detail_default_time_inner_offset</item>
        <item name="android:drawablePadding">@dimen/activity_time_report_detail_default_time_inner_offset</item>
        <item name="android:drawableLeft">@drawable/ic_time_report_default_time_plus</item>
        <item name="android:background">@drawable/bg_time_report_large_input_border</item>
    </style>

    <style name="TimeReportDetailTimeInputStyle">
        <item name="android:background">@drawable/bg_time_report_small_input_border</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/activity_time_report_detail_time_input_height</item>
        <item name="android:layout_marginRight">@dimen/activity_time_report_detail_change_time_buttons_size</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:paddingRight">@dimen/activity_time_report_detail_time_input_right_padding</item>
        <item name="android:textColor">@color/color_time_report_detail_time_text_color</item>
        <item name="android:textSize">@dimen/activity_time_report_detail_time_text_size</item>
        <item name="android:inputType">number</item>
        <item name="android:digits">0123456789:</item>
    </style>

    <style name="TimeReportDetailChangeTimeValueButtonStyle">
        <item name="android:scaleType">center</item>
        <item name="android:layout_width">@dimen/activity_time_report_detail_change_time_buttons_size</item>
        <item name="android:layout_height">@dimen/activity_time_report_detail_change_time_buttons_size</item>
        <item name="android:background">@drawable/bg_increase_reduce_ripple_primary</item>
    </style>

    <style name="TimeReportDetailActionButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/activity_time_report_detail_action_button_height</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/activity_time_report_detail_action_button_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="TimeReportDetailSecondaryButtonStyle" parent="TimeReportDetailActionButtonStyle">
        <item name="android:textColor">@color/turquoise</item> <!--todo: color selector for start/stop-->
        <item name="android:background">@drawable/bg_secondary_button</item>
    </style>

    <style name="TimeReportDetailPrimaryButtonStyle" parent="TimeReportDetailActionButtonStyle">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@color/turquoise</item>
    </style>

    <style name="ReportPropertyHeaderTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/fragment_report_properties_header_text_size</item>
        <item name="android:paddingTop">@dimen/fragment_report_properties_header_top_offset</item>
        <item name="android:paddingBottom">@dimen/fragment_report_properties_header_bottom_offset</item>
        <item name="android:paddingLeft">@dimen/fragment_report_properties_inner_offset</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/color_report_properties_property_header_text_color</item>
    </style>

    <style name="ReportPropertyTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/fragment_report_properties_property_text_size</item>
        <item name="android:background">@drawable/bg_ripple_accent</item>
        <item name="android:textColor">@color/color_report_properties_property_text_color</item>
        <item name="android:paddingLeft">@dimen/fragment_report_properties_property_left_margin</item>
        <item name="android:paddingTop">@dimen/fragment_report_properties_property_vertical_offset</item>
        <item name="android:paddingBottom">@dimen/fragment_report_properties_property_vertical_offset</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="CardViewStyle">
        <item name="android:layout_marginLeft">@dimen/fragment_employee_details_margin</item>
        <item name="android:layout_marginRight">@dimen/fragment_employee_details_margin</item>
        <item name="android:layout_marginTop">@dimen/fragment_employee_details_margin</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BottomNavLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/color_time_report_disabled_text</item>
    </style>

    <style name="BottomNavContainer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center|bottom</item>
        <item name="android:orientation">vertical</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="BottomNavIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

</resources>