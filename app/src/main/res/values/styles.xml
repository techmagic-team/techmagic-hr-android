<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>


    <style name="DialogThemeWhite" parent="android:Theme.Holo.Dialog.NoActionBar">
        <item name="android:backgroundDimEnabled">false</item>
    </style>


    <style name="DialogThemeDimmed" parent="android:Theme.Dialog">
        <item name="android:backgroundDimEnabled">true</item>
    </style>


    <style name="NoActionBarTheme" parent="Theme.AppCompat.NoActionBar" />


    <style name="AppTheme.Primary.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


    <style name="EmployeeDetailsLayout">
        <item name="android:selectableItemBackground">?android:attr/selectableItemBackground</item>
        <item name="android:layout_marginTop">@dimen/fragment_employee_details_text_layout_margin_vertical</item>
        <item name="android:layout_marginBottom">@dimen/fragment_employee_details_text_layout_margin_vertical</item>
        <item name="android:layout_marginLeft">@dimen/fragment_employee_details_text_layout_margin_horizontal</item>
        <item name="android:layout_marginRight">@dimen/fragment_employee_details_text_layout_margin_horizontal</item>
    </style>


    <style name="EmployeeDetailsLayoutContent">
        <item name="android:layout_marginTop">@dimen/fragment_employee_details_text_layout_margin_vertical</item>
        <item name="android:layout_marginLeft">0dp</item>
    </style>


    <style name="EmployeeDetailsTextView">
        <item name="android:layout_marginLeft">@dimen/fragment_employee_details_text_view_margin_horizontal</item>
        <item name="android:layout_marginRight">@dimen/fragment_employee_details_text_view_margin_horizontal</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:lineSpacingExtra">@dimen/fragment_employee_details_line_spacing_extra</item>
    </style>


    <style name="EmployeeDetailsTextViewContent">
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">@dimen/fragment_employee_details_text_view_margin_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/fragment_employee_details_text_view_margin_bottom</item>
        <item name="android:lineSpacingExtra">@dimen/fragment_employee_details_line_spacing_extra</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>
